{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "start backend",
      "dependsOn": [
        "discovery-server",
        "gateway",
        "map-service",
        "notes-service"
      ],
      // "runOptions": {
      //   "runOn": "default"
      // }
    },
    {
      "label": "discovery-server",
      "type": "shell",
      "command": "gradle bootRun",
      "presentation": {
        "group": "info-map-discovery"
		  },
      "options": {
        "cwd": "${workspaceFolder}/discovery-server"
      }
		},
    {
      "label": "gateway",
      "type": "shell",
      "command": "gradle bootRun",
      "presentation": {
        "group": "info-map-discovery"
		  },
      "options": {
        "cwd": "${workspaceFolder}/gateway"
      }
		},
    {
      "label": "map-service",
      "type": "shell",
      "command": "gradle bootRun",
      "presentation": {
        "group": "info-map-backend"
		  },
      "options": {
        "cwd": "${workspaceFolder}/map-service"
      }
		},
    {
      "label": "notes-service",
      "type": "shell",
      "command": "cargo run",
      "presentation": {
        "group": "info-map-backend"
		  },
      "options": {
        "cwd": "${workspaceFolder}/notes-service"
      }
		},

    {
      "label": "test-map-service",
      "type": "shell",
      "command": "./gradlew test",
      "presentation": {
        "group": "info-map-backend"
		  },
      "options": {
        "cwd": "${workspaceFolder}/map-service"
      }
		},
	]
}